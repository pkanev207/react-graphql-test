{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    // "project": true
    "project": "./tsconfig.json"
  },
  "requireConfigFile": false,
  "root": true,
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "overrides": [],
  "rules": {
    "max-len": [1, 170, 2, { "ignoreComments": true }],
    "no-unused-vars": 0,
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  },
  "ignorePatterns": ["./node_modules/**/*"]
}
